{
  "name": "mhc-demo-app",
  "version": "0.8.0",
  "private": true,
  "type": "module",
  "description": "Conserved Human MHC-I Epitopes - Alignment-consistent consensus prediction",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "vitest run",
    "dev": "tsx watch --tsconfig server/tsconfig.json --exclude './client/**' --exclude './**/.vite/**' server/src/index.ts",
    "build": "vite build --config client/vite.config.ts && tsc -p server/tsconfig.json && tsc-alias -p server/tsconfig.json",
    "start": "npm run build && cross-env NODE_ENV=production node dist/server/src/index.js",
    "preview": "vite preview --config client/vite.config.ts",
    "setup:msa": "node scripts/setup-msa.mjs"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "plotly.js": "^2.35.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-plotly.js": "^2.6.0",
    "vite-express": "^0.22.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.18",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.56.0",
    "vite": "^7.3.1"
  }
}
